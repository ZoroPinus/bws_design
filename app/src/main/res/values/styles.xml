<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name= "AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <!-- Customize your theme here. -->
        <item name= "colorPrimary" > @color/primary </item>
        <item name= "colorPrimaryDark" > @color/white </item>
        <item name= "colorAccent" > @color/primary </item>
    </style>
    <style name= "AppTheme" parent= "AppBaseTheme" >
        <item name= "android:textViewStyle" > @style/RobotoTextViewStyle </item>
        <item name= "android:buttonStyle" > @style/RobotoButtonStyle </item>
    </style>
    <style name= "RobotoTextViewStyle" parent= "android:Widget.TextView" >
        <item name= "android:fontFamily" > poppins </item>
    </style>
    <style name= "RobotoButtonStyle" parent= "android:Widget.Holo.Button" >
        <item name= "android:fontFamily" > poppins </item>
    </style>
    <style name="CustomSpinnerStyle">
        <item name="android:background">@color/grey_input</item> <!-- Optional custom background -->
        <item name="android:dropDownSelector">@drawable/rounded_edit_text</item> <!-- Custom dropdown arrow -->
        <item name="android:spinnerMode">dialog</item> <!-- Optional: Set spinner mode to dialog for a more customizable look -->
    </style>
    <style name="BottomNavigationViewTextStyleActive">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="BottomNavigationViewTextStyleInactive">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/grey_light</item>
    </style>
    <style name="Circular">
        <item name="cornerFamily">rounded</item>
        <item name="borderWidth">2dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="Toolbar.TitleCentered" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Toolbar.TitleCentered</item>
    </style>

    <style name="TextAppearance.Toolbar.TitleCentered" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="SubmitButtonStyle" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/submit_button</item>
    </style>
    <style name="UpdateButtonStyle" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/update_button</item>
    </style>
    <style name="LogoutButtonStyle" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/logout_button</item>
    </style>

</resources>